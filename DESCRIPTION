Package: salem
Type: Package
Title: Provides Access to Salem Witchcraft Data
Version: 0.2.0
Authors@R: 
    c(person(given = "Elin",
             family = "Waring",
             role = c("aut", "cre"),
             email = "elin.waring@gmail.com"),
      person(given = "Richard",
             family = "Latner",
             role = c("aut"),
